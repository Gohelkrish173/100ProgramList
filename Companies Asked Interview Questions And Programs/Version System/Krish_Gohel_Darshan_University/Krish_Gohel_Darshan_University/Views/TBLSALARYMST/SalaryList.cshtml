@{
    var message = TempData["Exception"] != "" ? @TempData["Exception"] : "";
    var message2 = TempData["Message"] != "" ? TempData["Message"] : "";
}

<div>

    <h1 class="text-primary">Employee Salary List</h1>

    <div class="m-1 p-2 bg-warning">
        <h3 class="text-white">
            @message
            @message2
        </h3>
    </div>

    <div class="d-flex">
        <button class="btn btn-primary me-2 text-white" type="button">
            <a class="text-white" asp-action="FormPage" asp-controller="TBLSALARYMST">New</a>
        </button>
        <button class="btn btn-success" type="button">
            <a class="text-white" asp-action="GenerateReport" asp-controller="TBLSALARYMST">Report</a>
        </button>
    </div>

    <div>
        <table class="table">
            <thead>
                <tr>
                    <th>SELECT</th>
                    <th>EMP Name</th>
                    <th>MONTH</th>
                    <th>SALARY</th>
                </tr>
            </thead>
            <tbody>
                @foreach (TBLSALARYMSTModel x in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex">
                                <button class="btn btn-warning me-2 text-white" type="button">
                                    <a class="text-white" asp-action="FormPage" asp-controller="TBLSALARYMST" asp-route-ID="@x.ID">EDIT</a>
                                </button>
                                <button class="btn btn-danger" type="button">
                                    <a class="text-white" asp-action="SalaryDelete" asp-controller="TBLSALARYMST" asp-route-ID="@x.ID">DELETE</a>
                                </button>
                            </div>
                        </td>
                        <td>
                            @x.EMPName
                        </td>
                        <td>
                            @x.MONTH
                        </td>
                        <td>
                            @x.SALARY
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>